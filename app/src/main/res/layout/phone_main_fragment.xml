<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phone.Phone_Main_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/phone_main_layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/phone_main_LayoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="1dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/phone_main_SearchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/phone_main_SortImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="7dp"
                android:src="@android:drawable/ic_menu_sort_by_size" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/phone_main_PhoneListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phone_main_layout0"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/phone_main_btnPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:background="@drawable/btn_plus"
        android:text="+" />

    </RelativeLayout>
</FrameLayout>

